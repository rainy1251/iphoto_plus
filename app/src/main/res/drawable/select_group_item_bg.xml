<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/color_333333" android:state_checked="true">

        <shape android:shape="rectangle">

            <corners
                android:radius="6dp"
                />
            <solid
                android:color="@color/yp_group_checked"
                />
            <stroke android:color="@color/ip_blue"
                android:width="1dp"/>
        </shape>

    </item>

    <item android:color="@color/white" android:state_checked="false">

        <shape>
            <!--未选中效果-->
            <corners
                android:radius="6dp"
                />
            <solid
                android:color="@color/white"
                />
            <stroke android:color="#FFD9D9D9"
                android:width="1dp"/>

        </shape>
    </item>
</selector>