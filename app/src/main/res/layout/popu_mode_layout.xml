<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/shape_pop_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="上传方式"
            android:textColor="@color/color_222222"
            android:textSize="16sp"
            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/rl_direct"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="28dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="边拍边传"
                    android:textColor="@color/dark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="相机拍完后直接上传"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_direct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/check_on" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_hand"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="28dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点选上传"
                    android:textColor="@color/dark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="相机拍完后不直接上传，需要手动点选上传"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_hand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/check_off" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_rating"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="28dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标记上传"
                    android:textColor="@color/dark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="佳能相机使用标星"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/check_off" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            android:text="取消"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@color/color_333333"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>